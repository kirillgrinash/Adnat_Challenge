<%= render 'common/header' %>
<% if current_user %>
  Logged in as <%= current_user[:email] %>.
  <%= link_to “Log Out”, logout_path %>
<% end %>
<div>

  <p>You are not the member of any organisations.<br>
    Join an existing one or create a new one</p>
</div>

<div>
  <h1>Organisations</h1>
  <table>
    <% @organisation.each do |org| %>
    <tr>
      <td><%=org.name =%></td>
      <td><%=org.hourly_rate =%></td>
      <td><%= link_to 'Edit', edit_organisation_path(org) =%></td>
      <td><%= link_to 'Delete', organisation_path(org),
      method: :delete,
      data: {confirm: 'are you sure?'} =%></td>
    </tr>
    <% end %>
  </table>
</div>


<div>
    <h1>Create Organisation</h1>
    <%= render 'form' %>
</div>
